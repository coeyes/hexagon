package com.hexagonstar.framework.command{	import com.hexagonstar.framework.Main;	import com.hexagonstar.framework.command.env.CloseApplicationCommand;	import com.hexagonstar.framework.env.cli.CLICommandInvoker;	import com.hexagonstar.framework.env.cli.ICLICommandInvoker;	import com.hexagonstar.framework.managers.CommandManager;	import com.hexagonstar.framework.view.console.FPSMonitor;	import flash.display.StageDisplayState;		/**	 * CommandInvoker Class	 * @author Sascha Balkau	 */	public class CommandInvoker extends CLICommandInvoker implements ICLICommandInvoker	{		////////////////////////////////////////////////////////////////////////////////////////		// Properties                                                                         //		////////////////////////////////////////////////////////////////////////////////////////						////////////////////////////////////////////////////////////////////////////////////////		// Public Methods                                                                     //		////////////////////////////////////////////////////////////////////////////////////////				/**		 * Creates a new CommandInvoker instance.		 */		public function CommandInvoker()		{			super();		}						/**		 * appInit		 */		public function appInit():void		{			Main.instance.init();		}						/**		 * appInfo		 */		public function appInfo():void		{			_console.log(Main.appInfo.APP_NAME				+ " v" + Main.appInfo.APP_VERSION				+ " build #" + Main.appInfo.APP_BUILD				+ " (" + Main.appInfo.APP_BUILD_DATE				+ ") -- " + Main.appInfo.APP_COPYRIGHT				+ " " + Main.appInfo.APP_YEAR);		}						/**		 * appFPSToggle		 */		public function appFPSToggle():void		{			FPSMonitor.instance.toggle();		}						/**		 * appFullscreenToggle		 */		public function appFullscreenToggle():void		{			if (Main.app.stage.displayState == StageDisplayState.FULL_SCREEN_INTERACTIVE)			{				Main.app.stage.displayState = StageDisplayState.NORMAL;			}			else			{				Main.app.stage.displayState = StageDisplayState.FULL_SCREEN_INTERACTIVE;			}		}						/**		 * appClose		 */		public function appClose():void		{			CommandManager.instance.execute(new CloseApplicationCommand());		}						////////////////////////////////////////////////////////////////////////////////////////		// Getters & Setters                                                                  //		////////////////////////////////////////////////////////////////////////////////////////						////////////////////////////////////////////////////////////////////////////////////////		// Event Handlers                                                                     //		////////////////////////////////////////////////////////////////////////////////////////						////////////////////////////////////////////////////////////////////////////////////////		// Private Methods                                                                    //		////////////////////////////////////////////////////////////////////////////////////////	}}