tor(array:Array):Vector.<int>		{			var result:Vector.<int> = new Vector.<int>();			for each (var v:int in array)			{				result.push(v);			}			return result;		}						/**		 * Converts the specified array into a Number Vector. The array may only		 * contain integer or number values.		 * 		 * @param array The array to convert to a vector.		 * @return A vector with Number.		 */		public static function convertToNumberVector(array:Array):Vector.<Number>		{			var result:Vector.<Number> = new Vector.<Number>();			for each (var v:Number in array)			{				result.push(v);			}			return result;		}						/**		 * Converts the specified array into a String Vector.		 * 		 * @param array The array to convert to a vector.		 * @return A vector with strings.		 */		public static function convertToStringVector(array:Array):Vector.<String>		{			var result:Vector.<String> = new Vector.<String>();			for each (var v:String in array)			{				result.push(v);			}			return result;		}	}}