                          //		////////////////////////////////////////////////////////////////////////////////////////				/**		 * Creates a new ImageFile instance.		 */		public function ImageFile(path:String = "", id:int = -1)		{			super(path, id);		}						////////////////////////////////////////////////////////////////////////////////////////		// Getters & Setters                                                                  //		////////////////////////////////////////////////////////////////////////////////////////				public function get contentAsBitmap():Bitmap		{			var b:BitmapData = contentAsBitmapData;			if (b) return new Bitmap(b);			return null;		}						/**		 * TODO Needs to be tested with smoothing problem when images are loaded		 * from a different server (http://www.airtightinteractive.com/news/?p=100)!		 */		public function get contentAsBitmapData():BitmapData		{			if (_container.content != null)			{				var b:BitmapData = new BitmapData(_container.content.width,				   _container.content.height, true, 0x00000000);				b.draw(_container.content);				return b;			}						return null;		}						override public function get fileTypeID():int		{			return FileTypeIndex.IMAGE_FILE_ID;		}	}}