/////////////////////////////////////////////////////////////////////////						////////////////////////////////////////////////////////////////////////////////////////		// Properties                                                                         //		////////////////////////////////////////////////////////////////////////////////////////				protected var _parent:DisplayObjectContainer;		protected var _displayObjects:Vector.<DisplayObject>;		protected var _current:DisplayObject;		protected var _currentNr:int;				protected var _displayTime:int;		protected var _tweenDuration:int = 0.4;				protected var _timer:Timer;				protected var _tween:HTween;		protected var _easing:IEasing = new QuadEasing();				protected var _isTweenIn:Boolean;						////////////////////////////////////////////////////////////////////////////////////////		// Public Methods                                                                     //		////////////////////////////////////////////////////////////////////////////////////////				/**		 * Creates a new instance.		 * 		 * @param parent The container to that all added display objects are added.		 */		public function DisplayCycler(parent:DisplayObjectContainer, displayTime:int = 5000)		{			_parent = parent;			_displayTime = displayTime;						super();			setup();		}						/**		 * Adds a display object to the cycler.		 */		public function addDisplayObject(displayObject:DisplayObject):void		{			_displayObjects.push(displayObject);		}						/**		 * Starts the display cycling.		 */		public function start():void		{			tweenIn();					}						/**		 * Pauses the cycler.		 */		public function pause():void		{					}				/**		 * dispose		 */		public function dispose():void		{			removeEventListeners();		}						////////////////////////////////////////////////////////////////////////////////////////		// Getters & Setters                                                                  //		////////////////////////////////////////////////////////////////////////////////////////				/**		 * The time in MS how long a displayobject is being displayed		 * before it fades out.		 */		public function get displayTime():int		{			return _displayTime;		}		public function set displayTime(v:int):void		{			if (v == _displayTime) return;			_displayTime = v;			_timer.delay = _displayTime;		}				////////////////////////////////////////////////////////////////////////////////////////		// Event Handlers                                                                     //		////////////////////////////////////////////////////////////////////////////////////////				protected function onTimerComplete(e:TimerEvent):void		{			tweenOut();		}						protected function onTweenComplete(e:Event):void		{			if (_isTweenIn)			{				wait();			}			else			{				removeCurrent();			}		}						////////////////////////////////////////////////////////////////////////////////////////		// Private Methods                                                                    //		////////////////////////////////////////////////////////////////////////////////////////				/**		 * setup		 * @private		 */		protected function setup():void		{			createChildren();			addEventListeners();						_currentNr = 0;		}						/**		 * createChildren		 * @private		 */		protected function createChildren():void		{			_displayObjects = new Vector();						_timer = new Timer(_displayTime, 1);						_tween = new HTween();			_tween.duration = _tweenDuration;			_tween.easing = _easing.easeOut;		}				/**		 * addEventListeners		 * @private		 */		protected function addEventListeners():void		{			_timer.addEventListener(TimerEvent.TIMER_COMPLETE, onTimerComplete);			_tween.addEventListener(Event.COMPLETE, onTweenComplete);		}						/**		 * removeEventListeners		 * @private		 */		protected function removeEventListeners():void		{			_timer.removeEventListener(TimerEvent.TIMER_COMPLETE, onTimerComplete);			_tween.removeEventListener(Event.COMPLETE, onTweenComplete);		}						/**		 * tweenIn		 * @private		 */		protected function tweenIn():void		{			_isTweenIn = true;						_current = _displayObjects[_currentNr];			_current.alpha = 0;			_parent.addChild(_current);						_tween.target = _current;			_tween.setProperty("alpha", 1);			_tween.play();		}						/**		 * tweenOut		 * @private		 */		protected function tweenOut():void		{			_isTweenIn = false;						_tween.setProperty("alpha", 0);			_tween.play();		}						/**		 * wait		 * @private		 */		protected function wait():void		{			_timer.reset();			_timer.start();		}						/**		 * removeCurrent		 * @private		 */		protected function removeCurrent():void		{			_parent.removeChild(_current);						_currentNr++;			if (_currentNr > _displayObjects.length - 1)			{				_currentNr = 0;			}						tweenIn();		}	}}