////////////		// Properties                                                                         //		////////////////////////////////////////////////////////////////////////////////////////				protected var _listener:ICommandListener;						////////////////////////////////////////////////////////////////////////////////////////		// Public Methods                                                                     //		////////////////////////////////////////////////////////////////////////////////////////				/**		 * Creates a new Command instance.		 */		public function Command(listener:ICommandListener)		{			super();			_listener = listener;		}						/**		 * Executes the command. Abstract method.		 */ 		public function execute():void		{		}						////////////////////////////////////////////////////////////////////////////////////////		// Getters & Setters                                                                  //		////////////////////////////////////////////////////////////////////////////////////////				/**		 * TODO Not really the optimum! This getter should be static!		 * @return the name identifier of the command. Must be overriden in sub classes!		 */		public function get name():String		{			return "command";		}				/**		 * @return The object that listens to events fired by this command.		 */		public function get listener():ICommandListener		{			return _listener;		}						////////////////////////////////////////////////////////////////////////////////////////		// Private Methods                                                                    //		////////////////////////////////////////////////////////////////////////////////////////				/**		 * Notify listeners that the command has completed.		 * @private		 */		protected function notifyComplete():void		{			dispatchEvent(new CommandCompleteEvent(this));		}						/**		 * Notify listeners that an error has occured executing the command.		 * @private		 */		protected function notifyError(errorMsg:String):void		{			var e:CommandErrorEvent = new CommandErrorEvent(this);			e.text = errorMsg;			dispatchEvent(e);		}						/**		 * Abstract method! Override this method and put code here that should be		 * executed when the command finishes, like cleaning up event listeners etc.		 * After your code, place a call to super.complete().		 * @private		 */		protected function complete():void		{			notifyComplete();		}	}}