/		////////////////////////////////////////////////////////////////////////////////////////				/**		 * Creates a new Radian instance.		 * 		 * @param radian The angle in radian units.		 */		public function Radian(radian:Number)		{			_radian = radian;		}						/**		 * Returns the angle in radian units.		 * 		 * @return The angle in radian units.		 */		public function toRadian():Number		{			return _radian;		}						/**		 * Returns the angle in degree units.		 * 		 * @return The angle in degree units.		 */		public function toDegree():Number		{			return (_radian / Math.PI) * 180;		}						/**		 * Returns the angle value in radian as a Number.		 * 		 * @return The angle value in radian as a Number.		 */		public function valueOf():Number		{			return _radian;		}						/**		 * Returns the angle value in radian as a String.		 * 		 * @return The angle value in radian as a String.		 */		public function toString():String		{			return _radian.toString();		}	}}