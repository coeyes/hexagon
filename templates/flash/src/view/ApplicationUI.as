	/**	 * The Application's main UI wrapper. Can extend Sprite/BaseSprite for Flash	 * applications or any Flex framework container class for Flex applications.	 * 	 * @author Sascha Balkau	 */	public class ApplicationUI extends BaseSprite	{		////////////////////////////////////////////////////////////////////////////////////////		// Properties                                                                         //		////////////////////////////////////////////////////////////////////////////////////////						////////////////////////////////////////////////////////////////////////////////////////		// Public Methods                                                                     //		////////////////////////////////////////////////////////////////////////////////////////				/**		 * Creates a new ApplicationUI instance.		 */		public function ApplicationUI()		{			super();						/* Just for testing Flash-based Component *///			var c:TestComponent = new TestComponent();//			addChild(c);//						var ti:TextInput = new TextInput(60, 60);			ti.text = "Testing Testing!";			//ti.mouseFocusEnabled = true;			//ti.enabled = false;			addChild(ti);						var b1:Button = new Button(500, 40, 120, 20, "OK");			b1.emphasized = true;			addChild(b1);						var b2:Button = new Button(b1.x + b1.width + 10, b1.y, 120, 20, "Cancel");			addChild(b2);						var sb:ScrollBarLite = new ScrollBarLite();			sb.height = 300;			sb.x = sb.y = 20;			addChild(sb);						var ta:TextArea = new TextArea();			ta.width = 300;			ta.height = 200;			ta.x = 200;			ta.y = 270;			ta.horizontalScrollPolicy = ScrollPolicy.ON;			ta.wordWrap = false;			addChild(ta);						var pane:Pane = new Pane();			addChild(pane);		}						////////////////////////////////////////////////////////////////////////////////////////		// Getters & Setters                                                                  //		//////////////////////////////////////////////////////////