/////////////////////////				override public function set content(v:*):void		{			_styleSheet = new StyleSheet();			var css:String = "";						try			{				css = v;				_styleSheet.parseCSS(css);				_isValid = true;				_errorStatus = FileErrorStatus.OK;			}			catch (e:Error)			{				_isValid = false;				_errorStatus = e.toString();			}						if (_isValid) _size = new Byte(css.length);		}						public function get contentAsStyleSheet():StyleSheet		{			return _styleSheet;		}						override public function get fileTypeID():int		{			return FileTypeIndex.CSS_FILE_ID;		}	}}