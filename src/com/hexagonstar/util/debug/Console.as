//////////////////////////				protected static const PADDING:int = 4;						////////////////////////////////////////////////////////////////////////////////////////		// Properties                                                                         //		////////////////////////////////////////////////////////////////////////////////////////				protected static var _instance:Console;				protected var _stage:Stage;		protected var _width:int;		protected var _height:int;		protected var _bg:RectangleShape;		protected var _ta:TextArea;		protected var _ti:TextInput;						////////////////////////////////////////////////////////////////////////////////////////		// Public Methods                                                                     //		////////////////////////////////////////////////////////////////////////////////////////				/**		 * Creates a new instance of the class.		 */		public function Console()		{			if (_instance)			{				throw new Error("Tried to instantiate Console through"					+ " it's constructor. Use Console.instance instead!");			}						_stage = StageReference.stage;			createUI();		}				////////////////////////////////////////////////////////////////////////////////////////		// Getters & Setters                                                                  //		////////////////////////////////////////////////////////////////////////////////////////				public static function get instance():Console		{			if (!_instance) _instance = new Console();			return _instance;		}						////////////////////////////////////////////////////////////////////////////////////////		// Event Handlers                                                                     //		////////////////////////////////////////////////////////////////////////////////////////						////////////////////////////////////////////////////////////////////////////////////////		// Private Methods                                                                    //		////////////////////////////////////////////////////////////////////////////////////////				/**		 * Creates the UI for the console.		 * @private		 */		protected function createUI():void		{			_width = _stage.stageWidth;			_height = _stage.stageHeight / 3;						_bg = new RectangleShape(_width, _height, 0x333333);						_ti = new TextInput();			_ti.width = _width - (PADDING * 2);			_ti.x = PADDING;			_ti.y = _height - _ti.height - PADDING;			_ti.hasShadow = false;						_ta = new TextArea();			_ta.width = _ti.width;			_ta.x = _ti.x;			_ta.y = PADDING;			_ta.height = _height - _ti.height - (PADDING * 3);			_ta.editable = false;			_ta.hasShadow = false;						addChild(_bg);			addChild(_ta);			addChild(_ti);		}	}}