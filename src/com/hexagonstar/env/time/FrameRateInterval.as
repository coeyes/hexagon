                                                         //		////////////////////////////////////////////////////////////////////////////////////////				/**		 * Creates a new FrameRateInterval instance. This class requires the		 * StageReference class to be initialized before it can be used.		 * 		 * @param fps The frame rate value for the FrameRateInterval. If this		 *         value is smaller than 0 the SWF's default frameRate will be used.		 */		public function FrameRateInterval(fps:int = -1)		{			_fps = (fps > -1) ? fps : StageReference.stage.frameRate;			super(Math.round(1000 / _fps), 0);		}						////////////////////////////////////////////////////////////////////////////////////////		// Getters & Setters                                                                  //		////////////////////////////////////////////////////////////////////////////////////////				/**		 * Returns the framerate of the FrameRateTimer.		 * 		 * @return The framerate of the FrameRateTimer.		 */		public function get frameRate():int		{			return _fps;		}	}}