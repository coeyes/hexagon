	public static const LOOP:String		= "loop";						////////////////////////////////////////////////////////////////////////////////////////		// Properties                                                                         //		////////////////////////////////////////////////////////////////////////////////////////				protected var _loops:int;						////////////////////////////////////////////////////////////////////////////////////////		// Public Methods                                                                     //		////////////////////////////////////////////////////////////////////////////////////////				/**		 * Creates a new SequenceEvent.		 * 		 * @param type The type of event.		 * @param bubbles Determines whether the Event object participates		 *         in the bubbling stage of the event flow.		 * @param cancelable Determines whether the Event object can be canceled.		 */		public function SequenceEvent(type:String,										bubbles:Boolean = false,										cancelable:Boolean = false) 		{			super(type, bubbles, cancelable);		}						/**		 * Clones the event object.		 * 		 * @return a clone of the event.		 */		override public function clone():Event 		{			var e:SequenceEvent = new SequenceEvent(type, bubbles, cancelable);			e.loops = _loops;			return e;		}						////////////////////////////////////////////////////////////////////////////////////////		// Getters & Setters                                                                  //		////////////////////////////////////////////////////////////////////////////////////////				/**		 * The number of times the sequence has run.		 */		public function get loops():int		{			return _loops;		}				public function set loops(v:int):void 		{			_loops = v;		}	}}