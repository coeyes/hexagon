               //		////////////////////////////////////////////////////////////////////////////////////////				protected var _commands:Vector.<CLICommand>;		protected var _commandHandler:CLICommandHandler;						////////////////////////////////////////////////////////////////////////////////////////		// Public Methods                                                                     //		////////////////////////////////////////////////////////////////////////////////////////				/**		 * Creates a new CLI instance.		 */		public function CLI()		{			_commands = new Vector.<CLICommand>();			_commandHandler = new CLICommandHandler();						addDefaultCommands();		}						/**		 * Processes the input entered in the TextInput.		 */		public function processInput(input:String):void		{			var found:Boolean = false;						for each (var c:CLICommand in _commands)			{				if (input.toLowerCase() == c.commandString)				{					found = true;					c.handler.apply(null, c.arguments);				}			}						if (!found)			{				_commandHandler.consoleMessage("Unknown command: " + input);			}		}						////////////////////////////////////////////////////////////////////////////////////////		// Getters & Setters                                                                  //		////////////////////////////////////////////////////////////////////////////////////////						////////////////////////////////////////////////////////////////////////////////////////		// Event Handlers                                                                     //		////////////////////////////////////////////////////////////////////////////////////////						////////////////////////////////////////////////////////////////////////////////////////		// Private Methods                                                                    //		////////////////////////////////////////////////////////////////////////////////////////				/**		 * addDefaultCommands		 * @private		 */		protected function addDefaultCommands():void		{			var cmd1:CLICommand = new CLICommand();			cmd1.commandString = "clear";			cmd1.helpString = "Clears the console.";			cmd1.handler = _commandHandler.consoleClear;						var cmd2:CLICommand = new CLICommand();			cmd2.commandString = "help";			cmd2.helpString = "Displays the command help.";			cmd2.handler = _commandHandler.consoleHelp;			cmd2.arguments = [_commands];						var cmd3:CLICommand = new CLICommand();			cmd3.commandString = "hide";			cmd3.helpString = "Hides the console.";			cmd3.handler = _commandHandler.consoleHide;						var cmd4:CLICommand = new CLICommand();			cmd4.commandString = "mem";			cmd4.helpString = "Displays memory currently consumed by application.";			cmd4.handler = _commandHandler.consoleMem;						var cmd5:CLICommand = new CLICommand();			cmd5.commandString = "time";			cmd5.helpString = "Displays the time that has passed since application start.";			cmd5.handler = _commandHandler.consoleTime;						_commands.push(cmd1);			_commands.push(cmd2);			_commands.push(cmd3);			_commands.push(cmd4);			_commands.push(cmd5);		}	}}