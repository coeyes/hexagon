ocale file.		 */		public function LocaleLoader(filePath:String, fileID:String = null)		{			super(filePath, fileID);		}						/**		 * Returns a String Representation of LocaleLoader.		 * @return A String Representation of LocaleLoader.		 */		override public function toString():String		{			return "[LocaleLoader]";		}						////////////////////////////////////////////////////////////////////////////////////////		// Private Methods                                                                    //		////////////////////////////////////////////////////////////////////////////////////////				/**		 * Tries to parse the specified key and value pair into the Locale Model.		 * @private		 */		override protected function parseProperty(key:String, val:String):void		{			var locale:Locale = Main.locale;			var keyExists:Boolean = true;			var p:*;						/* Check if the key found in the locale file is defined in the Locale Model */			try			{				p = locale[key];			}			catch (e:Error)			{				Log.error(toString() + " Error parsing locale property <"					+ key + "> (" + e.message + ")");				keyExists = false;			}						if (keyExists)			{				locale[key] = val;			}		}	}}