//////////////////////////////////////////////////////////////				/**		 * Creates a new CLIDefaultCommands instance.		 */		public function CLIDefaultCommands(cli:CLI)		{			_cli = cli;		}						/**		 * create		 */		public function create():void		{			_cli.createCommand("buffer", "consoleBuffer", "Displays the currently occupied buffer size of the console.");			_cli.createCommand("clear", "consoleClear", "Clears the console.");			_cli.createCommand("exit", "appExit", "Exits the application.");			if (Main.config.fpsMonitorEnabled)			{				_cli.createCommand("fps", "appFPS", "Toggles the FPS Monitor.");			}			_cli.createCommand("full", "consoleFull", "Toggles console size.");			_cli.createCommand("fullscreen", "appFullscreen", "Toggles fullscreen mode.");			_cli.createCommand("gc", "consoleGC", "Forces a garbage collection mark/sweep.");			_cli.createCommand("help", "consoleHelp", "Displays the command help.");			_cli.createCommand("hide", "consoleHide", "Hides the console.");			_cli.createCommand("info", "appInfo", "Displays application information string.");			_cli.createCommand("init", "appInit", "Initializes the application.");			_cli.createCommand("locale", "appLocale", "Displays which locale is currently used or if a locale ID was specified tries to load that locale.", ["id"]);			_cli.createCommand("mem", "consoleMem", "Displays memory currently consumed by application.");			_cli.createCommand("runtime", "consoleRuntime", "Displays information about the runtime the application is running in.");			_cli.createCommand("time", "consoleTime", "Displays the time that has passed since application start.");		}	}}