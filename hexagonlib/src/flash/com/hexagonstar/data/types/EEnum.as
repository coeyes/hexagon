                                                  //		////////////////////////////////////////////////////////////////////////////////////////				/**		 * Returns a String Representation of EEnum.		 * @return A String Representation of EEnum.		 */		override public function toString(...args):String		{			return super.toString("value=" + _value);		}						////////////////////////////////////////////////////////////////////////////////////////		// Private Methods                                                                    //		////////////////////////////////////////////////////////////////////////////////////////				/**		 * init		 * @private		 */		protected static function init(type:*):void		{			var t:XML = describeType(type);						for each (var c:XML in t.constant)			{				var e:EEnum = type[c.@name];								/* if 'value' is already initialized, then we're probably				 * calling init() on the same type twice by accident, likely				 * a copy-paste bonehead mistake. */				if (e._value != null)				{					throw new Error("Can't initialize EEnum '" + type + "' twice!");				}								/* if the types don't match then probably have another copy-paste error. */				var obj:* = e;				if (obj.constructor != type)				{					throw new Error("EEnum constant type '" + obj.constructor + "' "						+ "does not match its enum class '" + type + "'!");				}								e._value = c.@name;			}		}	}}