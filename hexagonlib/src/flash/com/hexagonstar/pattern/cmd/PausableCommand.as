package com.hexagonstar.pattern.cmd{	/**	 * A command that supports being paused and unpaused.	 * 	 * @author Sascha Balkau	 */	public class PausableCommand extends Command	{		////////////////////////////////////////////////////////////////////////////////////////		// Properties                                                                         //		////////////////////////////////////////////////////////////////////////////////////////				protected var _paused:Boolean;						////////////////////////////////////////////////////////////////////////////////////////		// Public Methods                                                                     //		////////////////////////////////////////////////////////////////////////////////////////				/**		 * Creates a new PausableCommand instance.		 */		public function PausableCommand()		{			super();		}						////////////////////////////////////////////////////////////////////////////////////////		// Getters & Setters                                                                  //		////////////////////////////////////////////////////////////////////////////////////////				/**		 * Pauses or unpauses the command.		 */		public function get paused():Boolean		{			return _paused;		}		public function set paused(v:Boolean):void		{			_paused = v;		}	}}